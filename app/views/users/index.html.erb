<%= form_tag('/users', method: :get) do %>
    <%= label_tag :名前 %>
    <%= text_field_tag :search_name %>
    <%= label_tag :年齢 %>
    <%= text_field_tag :search_age %>
    <%= submit_tag '検索' %>
    <% end %>

    <table>
      <tbody>
        <thead>
          <tr>
            <th>名前</th>
            <th>年齢</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <th><%= user.name %></th>
            <th><%= user.age %></th>
          </tr> 
        <% end %>
      </tbody>
    </table>